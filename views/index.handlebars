<div class="jumbotron">
  <h1 class="title">Hot Wheels</h1>
</div>
<div>
  <div class="row anchor">
    <div class="col-md-2 mx-auto">
      <div class=" mx-auto userForm">
        <div class="usercard text-center" style="width:max-content;">
          <div class="card-body" >
            <form autocomplete="off">
              <div id="DivError">
                <button type="button" class="btn btn-default" id="error"></button>
              </div>
              <div class="form-group">
                <input type="email" name="email" id="email" class="form-control" placeholder="Enter E-mail">
              </div>
              <div class="form-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password">
              </div>
              <div class="form-group">
                <button id="login" class="btn btn-danger btn-block ">
                  Login
                </button>
              </div>
              <div class="form-group">
                <p>Don't have a member account yet?</p>
                <a href="/member" class="btn btn-success">Join US</a>
              </div>
            </form>
          </div>
        </div>
      </div>
          </br>
          </br>

      <div class="return-login" >
        <h2>Welcome</h2>
        <p>
        <div id="userName"></div>
        </p>
        </br>
        </br>
        <button class="btn btn-success" type="button" id="return">Return Cars</button>
        <button class="btn btn-danger " type="button" id="logout">Logout</button>
      </div>

      <div class="filterBox" style="background-color: #62929a;">
        <h3>Filter</h3>
        <div class="dropdown">
          <select id="vehicle">
          <option selected>Vehicle Type</option>
          <option value="Car">Car</option>
          <option value="SUV">SUV</option>
          <option value="Exclusive">Exclusive</option>
          </select>
        </div>
        </br>
        <div class="dropdown">
          <select id="color"  aria-labelledby="dropdownMenuButton">
            <option selected>Color</option>
            <option value="Red">Red</option>
            <option value="Green">Green</option>
            <option value="Blue">Blue</option>
            <option value="Black">Black</option>
            <option value="Orange">Orange</option>
            <option value="All">All</option>
          </select>
        </div>
        </br>
        <div class="dropdown">
          <select id="priceRange"  aria-labelledby="dropdownMenuButton">
            <option selected>Price Range</option>
            <option value="1">Below $500</option>
            <option value="2">$501 to $999</option>
            <option value="3">$1000 to $2999</option>
            <option value="4">$3000 to $6999</option>
            <option value="5">Above $7000</option>
          </select>
        </div>
        </br>
        <button class="btn btn-success" id="filterSubmit" >Submit</button>
      </br>
      </div>
</br>
</br>
<div class="contact" >
  <h2>Contact Us!</h2>
<i class="fa fa-github icon-9x" aria-hidden="true"></i> 
</br>
<i class="fa fa-linkedin" aria-hidden="true"></i>
</br>
<i class="fa fa-file-pdf-o" aria-hidden="true"></i>

</div>

    </div>

    <div class="col-md-9">
      <div>
        <p id="vehicleType">All Vehicles</p>
        <container>
          {{#each cars}}
          <div id={{model}} class="card" style="width: 288px; height: 344px;">
            <img src="/img/{{model}}.jpg" class="card-img-top" alt={{model}}>
            <div class="card-body">
              <h5 class="card-title">
                <p><span id="makeFont">{{make}}<span> <span id="modelFont">{{model}}</span></p>
              </h5>
              <br>
              <p class="card-text">${{pricePerDay}} per day</p>
              <button data-id="{{id}}" data-price="{{pricePerDay}}" data-make="{{make}}" data-model="{{model}}"
                class="rentMe btn btn-primary" data-toggle="modal" data-target="#myModal">Rent Me!</button>
            </div>
          </div>
          {{/each}}
        </container>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <img class="rentalCar" src="#">
        <h4 class="modal-title">{{make}} {{model}}</h4>
      </div>
      <div class="modal-body">
        <!--rental info goes below -->
        <div id="userName2"></div>
        <div id="customerID"></div>
        <div id="carPrice"></div>
        <div id="carID"></div>
        <button type="button" id="rentIt" class="btn btn-success">Rent Me!</button>
        <!-- end rental info-->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



