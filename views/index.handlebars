<div class="jumbotron">
  <h1 class="title">Hot Wheels</h1>
</div>
        <form class="pure-form pure-form-aligned">
    <fieldset>
      <h4>Returning Users</h4>
        <div class="pure-control-group">
            <label for="aligned-name">Username</label>
            <input type="text" id="aligned-name" placeholder="Username" />
            <span class="pure-form-message-inline">This is a required field.</span>
        </div>
        <div class="pure-control-group">
            <label for="aligned-password">Password</label>
            <input type="password" id="aligned-password" placeholder="Password" />
        </div>
        
        
    </fieldset>
</form>

{{#each cars}}
<div id={{model}} class="card" style="width: 18rem;">
  <img src="/img/{{model}}.jpg" class="card-img-top" alt={{model}}>
  <div class="card-body">
    <h5 class="card-title"><p>{{make}} {{model}}</p></h5>
    <br>
    <p class="card-text">${{pricePerDay}} per day</p>
    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal" >Rent Me!</a>
  </div>
</div>
{{/each}}


{{#each cars}}
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" >
          <img src="/img/{{model}}.jpg"
          <h4 class="modal-title">{{make}} {{model}}</h4>
        </div>
        <div class="modal-body">
          <!--rental info goes below -->
          <p>Rental info goes here!</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
